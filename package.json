{
  "name": "burroughs-app",
  "description": "Fullstack app demoing the Burroughs Test for PBS",
  "author": "Will Chadwick",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillCDev/BurroughsApp.git"
  },
  "engines": {
    "node": "^14.17.0",
    "npm": "^6.0.0"
  },
  "scripts": {
    "start": "npm run server:build && npm run serve",
    "serve": "export TZ=utc && node server/dist/index.js",
    "server:build": "rm -rf ./server/dist/ && tsc --project server/tsconfig.json",
    "server:dev": "npm run server:build && nodemon --watch server -e ts --exec npm run start",
    "server:lint": "eslint './server/**/*.{ts,js}' --quiet && prettier --check 'server/**/*.{ts,js}'",
    "server:type-check": "tsc --project ./server/tsconfig.json --noEmit --skipLibCheck",
    "server:test": "npm run server:lint && npm run server:type-check && jest --config ./jest/server.config.js",
    "server:test:dev": "npm run server:lint && npm run server:type-check && jest --config ./jest/server.config.js --watchAll",

    "app:build": "rm -rf ./app/dist/ && webpack --config ./app/webpack/webpack.prod.js --progress --color",
    "app:build:dev": "rm -rf ./app/dist/ && webpack --config ./app/webpack/webpack.dev.js --progress --color",
    "app:dev": "webpack serve --config ./app/webpack/webpack.dev.js --progress --color",
    "app:lint": "eslint './app/**/*.{ts,js}' --quiet && prettier --check 'app/**/*.{ts,js}' && stylelint './app/**/*.{css,less}'",
    "app:type-check": "tsc --project ./app/tsconfig.json --noEmit --skipLibCheck",
    "app:test": "npm run app:lint && npm run app:type-check",
  
    "test": "npm run server:test && npm run app:test",
    "dev": "concurrently \"npm run server:dev\" \"npm run app:dev\""
  },
  "dependencies": {
    "@types/howler": "2.2.4",
    "date-fns": "2.25.0",
    "fastify": "3.22.1",
    "howler": "2.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@types/jest": "27.0.2",
    "@types/node": "^14.17.0",
    "@types/react": "17.0.32",
    "@types/react-dom": "17.0.10",
    "@types/react-router-dom": "5.3.1",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "@webpack-cli/serve": "1.6.0",
    "autoprefixer": "10.3.7",
    "babel-loader": "8.2.3",
    "babel-plugin-jsx-remove-data-test-id": "3.0.0",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "concurrently": "6.3.0",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.5.0",
    "css-minimizer-webpack-plugin": "3.1.1",
    "eslint": "8.0.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "27.3.1",
    "less": "4.1.2",
    "less-loader": "10.2.0",
    "less-vars-to-js": "1.3.0",
    "mini-css-extract-plugin": "2.4.3",
    "nodemon": "2.0.14",
    "postcss": "8.3.11",
    "postcss-loader": "6.2.0",
    "prettier": "2.4.1",
    "style-loader": "3.3.1",
    "stylelint": "14.0.1",
    "stylelint-config-standard": "23.0.0",
    "stylelint-less": "1.0.1",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4",
    "webpack": "5.60.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.3.1",
    "webpack-merge": "5.8.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ]
}
